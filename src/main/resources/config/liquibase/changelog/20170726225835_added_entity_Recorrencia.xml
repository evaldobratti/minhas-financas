<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <property name="now" value="now()" dbms="h2"/>

    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle, mssql"/>

    <!--
        Added the entity Recorrencia.
    -->
    <changeSet id="20170726225835-1" author="jhipster">
        <createTable tableName="recorrencia">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="tipo_frequencia" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="a_cada" type="integer">
                <constraints nullable="false" />
            </column>

            <column name="valor" type="decimal(10,2)">
                <constraints nullable="true" />
            </column>

            <column name="dia" type="integer">
                <constraints nullable="false" />
            </column>

            <column name="partir_de" type="date">
                <constraints nullable="false" />
            </column>

            <column name="conta_id" type="bigint">
                <constraints nullable="false" />
            </column>

            <column name="categoria_id" type="bigint">
                <constraints nullable="true" />
            </column>

			<column name="local_id" type="bigint">
                <constraints nullable="true" />
            </column>
            <!-- jhipster-needle-liquibase-add-column - JHipster will add columns here, do not remove-->
        </createTable>
        
        <createTable tableName="recorrencia_lancamento">
            <column name="lancamentos_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="recorrencias_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="recorrencias_id, lancamentos_id" tableName="recorrencia_lancamento"/>
        
    </changeSet>
</databaseChangeLog>
